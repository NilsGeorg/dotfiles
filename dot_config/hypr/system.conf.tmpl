{{ if eq .system_id "home_desk" }}
# monitors
monitor = LG Electronics LG HDR 4K 0x00060F37, 3840x2160@60, 0x0, 1.50
monitor = LG Electronics LG Ultra HD 0x0000C49F, 3840x2160@30, 2560x0, 1.50
source = ./config/workspaces.conf

# auto start
exec-once = telegram-desktop -startintray
exec-once = [workspace 1] firefox
exec-once = steam -silent

{{ else if eq .system_id "home_work" }}

# monitors
exec-once = kanshi # Replace with open/close lid detection
source = ./config/workspaces.conf

# autostart
exec-once = [workspace 3] firefox
exec-once = [workspace 2] teams-for-linux

{{ end }}
